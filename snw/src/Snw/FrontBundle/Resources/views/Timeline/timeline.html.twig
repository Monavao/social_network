{% extends 'FrontBundle::layout.html.twig' %}

{% block content %}
<div class="container">
	<h1>Timeline</h1>

	<table class="statuses_list">
		<thead>
			<tr>
				<th>User</th>
				<th>Content</th>
				<th>Deleted</th>
				<th>Createdat</th>
			</tr>
		</thead>
		<tbody>
			{% for status in statues %}
				<tr>
					<td>{{ status.user.username }}</td>
					<td>{{ status.content }}</td>
					<td>{{ status.deleted ? "supprimÃ©" : "visible" }}</td>
					<td>{% if status.createdAt %}
						{{ status.createdAt|date('Y-m-d H:i:s') }}
					{% endif %}
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
</div>
{% endblock content %}